<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>vframework</artifactId>
        <groupId>walkingdevs</groupId>
        <version>0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>demo</artifactId>
    <packaging>war</packaging>
    <dependencies>
        <dependency>
            <groupId>walkingdevs</groupId>
            <artifactId>jee</artifactId>
            <version>7.1</version>
        </dependency>

        <dependency>
            <groupId>walkingdevs</groupId>
            <artifactId>framework</artifactId>
            <version>0</version>
        </dependency>
        <dependency>
            <groupId>org.apache.openejb</groupId>
            <artifactId>javaee-api</artifactId>
            <version>6.0-6</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>3.3.2</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.apache.openejb</groupId>
            <artifactId>openejb-core</artifactId>
            <version>4.7.5</version>
            <scope>provided</scope>
        </dependency>

        <!-- Test -->
        <dependency>
            <groupId>org.apache.openejb</groupId>
            <artifactId>tomee-jaxrs</artifactId>
            <version>${tomee-version}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.apache.openejb</groupId>
            <artifactId>arquillian-tomee-embedded</artifactId>
            <version>${tomee-version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <finalName>ROOT</finalName>

        <resources>
            <resource>
                <directory>profile/resources/${profile}</directory>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <webResources>
                        <resource>
                            <directory>profile/webapp/${profile}</directory>
                        </resource>
                    </webResources>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.openejb.maven</groupId>
                <artifactId>tomee-maven-plugin</artifactId>
                <version>${tomee-version}</version>
                <configuration>
                    <tomeeClassifier>plume</tomeeClassifier>
                    <execFile>${project.build.directory}/app.jar</execFile>
                    <config>profile/tomee/${profile}</config>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>staging</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.openejb.maven</groupId>
                        <artifactId>tomee-maven-plugin</artifactId>
                        <configuration>
                            <libs>
                                <lib>org.postgresql:postgresql:${postgres-driver-version}</lib>
                            </libs>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
            <properties>
                <profile>staging</profile>
            </properties>
        </profile>

        <profile>
            <id>prod</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.openejb.maven</groupId>
                        <artifactId>tomee-maven-plugin</artifactId>
                        <configuration>
                            <libs>
                                <lib>org.postgresql:postgresql:${postgres-driver-version}</lib>
                            </libs>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
            <properties>
                <profile>prod</profile>
            </properties>
        </profile>

        <profile>
            <id>rebel</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.openejb.maven</groupId>
                        <artifactId>tomee-maven-plugin</artifactId>
                        <configuration>
                            <args>
                                -agentpath:${project.build.directory}/apache-tomee/lib/libjrebel${sun.arch.data.model}.${lib-extension}
                            </args>
                            <libs>
                                <lib>unzip:jrebel:jrebel:${jrebel-version}</lib>
                            </libs>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.zeroturnaround</groupId>
                        <artifactId>jrebel-maven-plugin</artifactId>
                    </plugin>
                    <plugin>
                        <groupId>com.vaadin</groupId>
                        <artifactId>vaadin-maven-plugin</artifactId>
                        <version>7.6.7</version>
                        <configuration>
                            <webappDirectory>src/main/webapp/VAADIN/widgetsets</webappDirectory>
                            <hostedWebapp>src/main/webapp/VAADIN/widgetsets</hostedWebapp>
                            <persistentunitcachedir>${project.build.directory}</persistentunitcachedir>
                            <deploy>${project.build.directory}/gwt-deploy</deploy>
                            <compileReport>false</compileReport>
                            <noServer>true</noServer>
                            <draftCompile>false</draftCompile>
                            <style>OBF</style>
                            <strict>true</strict>
                        </configuration>
                    </plugin>
                </plugins>

            </build>
        </profile>
    </profiles>
    <properties>
        <profile>dev</profile>
        <tomee-version>1.7.5</tomee-version>
        <tomee-plugin-version>${tomee-version}</tomee-plugin-version>
        <postgres-driver-version>42.1.4</postgres-driver-version>
        <jrebel-version>7.1.1</jrebel-version>
    </properties>
</project>